#
# Powerline Magenta Block - Tmux Theme
# Created by Jim Myhrberg <contact@jimeh.me>.
#
# Inspired by vim-powerline: https://github.com/Lokaltog/powerline
#
# Requires terminal to be using a powerline compatible font, find one here:
# https://github.com/Lokaltog/powerline-fonts
#

# Status update interval
set -g status-interval 7 

# Basic status bar colors
set -g status-style fg=colour240,bg=colour233

# Left side of status bar
set -g status-left-style bg=colour233,fg=colour243
set -g status-left-length 44
set -g status-left "#[fg=colour232,bg=colour125,bold] #S #[fg=colour125,bg=colour240,nobold]ÓÇ∞#[fg=colour233,bg=colour240] #(whoami) #[fg=colour240,bg=colour235]ÓÇ∞#[fg=colour240,bg=colour235] #I:#P #[fg=colour235,bg=colour233,nobold]ÓÇ∞#[fg=colour230, bg=colour233]CPU: #{cpu_icon}  #{cpu_percentage} Network: #{online_status}"

# Right side of status bar
set -g status-right-style bg=colour233,fg=colour243
set -g status-right-length 150
set -g status-right "#[fg=colour234,bg=colour233]ÓÇ≤#[fg=colour238,bg=colour234]  Battery: #{battery_icon_status} #{battery_percentage} #[fg=colour235,bg=colour234]ÓÇ≤#[fg=colour240,bg=colour235] ‚è∞ %H:%M #[fg=colour240,bg=colour235]ÓÇ≤#[fg=colour233,bg=colour240]  üóì  %d-%b-%y #[fg=colour245,bg=colour240]ÓÇ≤#[fg=colour232,bg=colour245,bold] #H "


# Window status
set -g window-status-format " #I:#W#F "
set -g window-status-current-format " #I:#W#F "

# Current window status
set -g window-status-current-style bg=colour90,fg=colour232

# Window with activity status
set -g window-status-activity-style bg=colour233,fg=colour141

# Window separator
set -g window-status-separator ""

# Window status alignment
set -g status-justify centre

# Pane border
set -g pane-border-style bg=default,fg=colour238

# Active pane border
set -g pane-active-border-style bg=default,fg=colour90

# Pane number indicator
set -g display-panes-colour colour233
set -g display-panes-active-colour colour245

# Clock mode
set -g clock-mode-colour colour90
set -g clock-mode-style 24

# Message
set -g message-style bg=colour90,fg=black

# Command message
set -g message-command-style bg=colour233,fg=black

# Mode
set -g mode-style bg=colour125,fg=colour231
